# Configurações do PostgreSQL
POSTGRES_USER = "postgres"
POSTGRES_PASSWORD = "postgres"
POSTGRES_DB = "bookstore"

# URL de conexão com o banco de dados
# Para Docker: use 'db' como host (nome do serviço)
DATABASE_URL = "postgresql+psycopg2://postgres:postgres@db:5432/bookstore"

# Para execução local (sem Docker): use 'localhost' como host
# DATABASE_URL = "postgresql+psycopg2://postgres:postgres@localhost:5433/bookstore"
